<!DOCTYPE html>
<html>
<head>
	<title>Authors</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
</head>
<body>
	<header>
		<% include ../partials/header %>
	</header>
		<div class='row'>
			<div class='col-md-2'>
				<div class='row'>
					<div class='col-md-1'><h1><a href="/authors">Authors</a></h1></div>
				</div>
				<div class='row'>
					<div class='col-md-1'><h1><a href="/books">Books</a></h1></div>
				</div>
			</div>
			<div class='col-md-8'>	
				<% authors.forEach(function(author) { %>
				<div class='row'>
					<div class='col-md-4'>
						<h4><%= author.name %></h4>
					</div>
					<div class='col-md-1'>
						<form method='GET' action="/authors/update/<%= author.id %>">
							<input type='submit' value="Edit">
						</form>
					</div>
					<div class='col-md-1'>
						<form method='POST' action='/authors/delete/<%= author.id %>?_method=DELETE'>
							<input type='submit' value="Remove">
						</form>
					</div>
				</div>
				<div class='row'>
					<div class='col-md-6'>
						<table class="table table-bordered">
							<thead>
								<tr>
									<th>Books</th>
								</tr>
							</thead>
							<tbody>
								<% author.books.forEach(function(book) { %>
								<tr>
									<td>
										<a href="/books/<%= book.id %>"><%= book.title %></a>
									</td>
								</tr>
								<% }); %>
							</tbody>
						</table>	
					</div>
				</div>
				<% }); %>
			</div>
		</div>	
	
</body>
</html>
