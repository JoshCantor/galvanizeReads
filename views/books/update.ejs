<!DOCTYPE html>
<html>
<head>
	<title>Book Categories</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
</head>
<body>
	<header>
		<% include ../partials/header %>
	</header>
	<h2>Current categories for <%= book.title %>:</h2>
	<ul>
		<% categories.forEach(function(category) { %>
			<li><%= category.name %></li>
			<form method='POST' action='/books/category/<%= book.id %>/<%= category.id %>?_method=DELETE'>
				<input type='submit' value='DELETE <%= category.name %>'>
			</form>
		<% }); %>
	</ul>
	<h2>Add a category for <%= book.title %>:</h2>
	<form method='POST' action='/books/<%= book.id %>'>
		New Category Name: <input type='text' name='name'>
		<input type='submit' value='submit'>
	</form>
	<br>
	<h2><a href='/books'>Return to book list</a></h2>
</body>
</html>