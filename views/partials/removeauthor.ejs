<div class='row'>
	<% include ../partials/sidebar %>
	<div class='col-md-8'>	
		<% authors.forEach(function(author) { %>
		<div class='row'>
			<div class='col-md-4'>
				<h4><a href="/authors/<%= author.id %>"><%= author.name %></a></h4>
			</div>
			<div class='col-md-1'>
				<form method='GET' action="/authors/update/<%= author.id %>">
					<input type='submit' value="Edit">
				</form>
			</div>
			<div class='col-md-1'>
				<form method='GET' action='/authors/delete/<%= author.id %>'>
					<input type='submit' value="Remove">
				</form>
			</div>
		</div>
		<% }); %>
	</div>
</div>	